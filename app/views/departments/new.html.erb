<div class="row">
  <div>
    <%= form_for(:department, url: departments_path) do |f| %>
      <%= f.label :department_code %>
      <%= f.text_field :department_code, class: 'form-control' %>
      <%= f.label :department_name %>
      <%= f.text_field :department_name, class: 'form-control' %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
